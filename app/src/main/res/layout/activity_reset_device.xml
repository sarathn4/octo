<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg_login"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.trail.octo.ResetDevice">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="30dp"
        android:text="Already generated OTP?"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/reset_editText_otp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="OTP"
        android:inputType="text"
        android:padding="10dp" />


    <Button
        android:id="@+id/reset_button_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_red_dark"
        android:text="RESET"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold|normal" />


    <TextView
        android:id="@+id/reset_textView_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="30dp"
        android:text="Click here to generate new OTP"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:textStyle="normal" />
</LinearLayout>
