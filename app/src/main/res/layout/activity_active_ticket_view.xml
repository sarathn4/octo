<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--MainContentView-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDEDED"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EDEDED">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/ticket_layout_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bgimg_redcircle_timer"
                        android:gravity="center"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/ticket_textView_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="25"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ticket_textView_day"
                            android:gravity="center"
                            android:text="DYS"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/darker_gray" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/ticket_layout_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ticket_textView_hour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="25"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ticket_textView_hour"
                            android:gravity="center"
                            android:text="HRS"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/darker_gray" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/ticket_layout_mins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ticket_textView_min"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="25"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ticket_textView_min"
                            android:gravity="center"
                            android:text="MINS"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/darker_gray" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/ticket_layout_secs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ticket_textView_sec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="25"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ticket_textView_sec"
                            android:gravity="center"
                            android:text="SECS"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/darker_gray" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/ticket_layout_millisecs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ticket_textView_millisec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="25"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ticket_textView_millisec"
                            android:gravity="center"
                            android:text="MLS"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/darker_gray" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_ticket_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_activeticket_top_pf"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ticket No"
                                android:textColor="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/ticketView_ticketno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OCTO534"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left|center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/icon_calandar" />

                                <TextView
                                    android:id="@+id/ticketView_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="22 Aug 2015 | 19.20 AM" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ticketView_qrcode"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/qr_code_dashed_bg"
                            android:padding="1dp"
                            android:src="@drawable/icon_valid" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="#EDEDED"
                        android:orientation="horizontal"
                        android:padding="1dp"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"

                            android:padding="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/image_profile"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:src="@drawable/profile_icon" />

                            <TextView
                                android:id="@+id/ticketView_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sarath"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/ticketView_no_of_tickets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_view_count_bg"
                                android:padding="4dp"
                                android:text="2 Tickets"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ticketView_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="I Class" />

                            <TextView
                                android:id="@+id/ticketView_period"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monthly" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="5dp"
                                    android:src="@drawable/icon_source" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Source"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@android:color/darker_gray" />


                                    <TextView
                                        android:id="@+id/ticketView_source"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Medium Text"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="#000000" />
                                </LinearLayout>

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ticketView_route"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_route" />

                            <LinearLayout
                                android:id="@+id/ticketView_destination_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="5dp"
                                    android:src="@drawable/icon_destination" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:text="Destination"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@android:color/darker_gray" />


                                    <TextView
                                        android:id="@+id/ticketView_destination"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Medium Text"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="#000000" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_activeticket_bottom"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Activated On"
                            android:textColor="@android:color/holo_purple" />

                        <TextView
                            android:id="@+id/ticketView_purchased_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 Aug 2015"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Valid Till"
                            android:textColor="@android:color/holo_purple" />

                        <TextView
                            android:id="@+id/ticketView_valid_date"
                            android:gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22 Aug 2015"
                            android:textColor="@android:color/white" />


                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_send_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_red_dark"
                    android:text="Send to mail"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner_doc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"></Spinner>

                    <ImageView
                        android:id="@+id/imageView_document"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/icon_docs_view" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <!--NavigationDrawerView-->

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <!-- Profile Box -->

        <RelativeLayout
            android:id="@+id/profileBox"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/holo_red_dark"
            android:padding="20dp">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:background="@drawable/corner"
                android:src="@drawable/profile_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/id_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:text="octo@octo.com"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- List of Actions (pages) -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileBox"
            android:background="@android:color/white"
            android:orientation="vertical">


            <ExpandableListView
                android:id="@+id/navList"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:background="#ffffffff"
                android:choiceMode="singleChoice" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>