<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Profile"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/upload_docs_camera"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/icon_camera" />

            <ImageView
                android:id="@+id/upload_docs_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/icon_gallery" />

            <ImageView
                android:id="@+id/upload_docs_gallery"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/icon_gallery" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/upload_docs_pan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_pan"
                android:gravity="bottom|end"
                android:orientation="vertical"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/upload_docs_pan_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_greentick"
                    android:visibility="invisible" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/upload_docs_driving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_driving"
                android:gravity="bottom|end"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/upload_docs_driving_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_greentick"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upload_docs_aadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_adhar"
                android:gravity="bottom|end"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/upload_docs_aadhar_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_greentick"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upload_docs_voter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_voter"
                android:gravity="bottom|end"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/upload_docs_voter_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_greentick"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upload_docs_passport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_passport"
                android:gravity="bottom|end"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/upload_docs_passport_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_greentick"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/upload_docs_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_dark"
        android:text="OK"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>

